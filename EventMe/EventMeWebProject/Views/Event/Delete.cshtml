@model EditEventFormModel;

@{
    ViewBag.Title = "Delete Event";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form  asp-action="Delete" method="post">
            <div class="mb-3">
                <label asp-for="Name" class="from-label">Name</label>
                <input asp-for="Name" class="form-control" area-required="true" disabled="disabled" />
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="from-label">Start</label>
                <input asp-for="StartDate" class="form-control" area-required="true" disabled="disabled" />
            </div>
            <div class="mb-3">
                <label asp-for="EndDate" class="from-label">End</label>
                <input asp-for="EndDate" class="form-control" area-required="true" disabled="disabled" />
            </div>
            <div class="mb-3">
                <label asp-for="Place" class="from-label">Place</label>
                <input asp-for="Place" class="form-control" area-required="true" disabled="disabled" />
            </div>
            <div class="mb-3 text-center">
                <input class="btn btn-danger" type="submit" value="Delete" />
            </div>
        </form>
    </div>
</div>


